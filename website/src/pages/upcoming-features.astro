          <div 
            class={`relative group p-8 rounded-3xl border-2 ${colorClasses[feature.color].border} ${colorClasses[feature.color].light} hover:shadow-2xl transition-all duration-500 fade-in-up`}
            style={`animation-delay: ${index * 150}ms`}
          >
            <!-- Priority Badge -->
            <div class="absolute -top-3 right-6">
              <span class={`${priorityLabels[feature.priority].class} text-xs font-bold px-3 py-1.5 rounded-full uppercase tracking-wide`}>
                {priorityLabels[feature.priority].label}
              </span>
            </div>
            
            <!-- Icon -->
            <div class={`w-20 h-20 ${colorClasses[feature.color].bg} rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg`}>
