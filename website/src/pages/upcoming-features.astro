---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type PriorityType = "high" | "medium" | "low";
type ColorType = "green" | "blue" | "purple" | "orange" | "pink" | "cyan" | "indigo" | "rose";

interface Feature {
  title: string;
  icon: string;
  status: string;
  description: string;
  benefits: string[];
  priority: PriorityType;
  color: ColorType;
}

const upcomingFeatures: Feature[] = [
  {
    title: "WhatsApp Integration",
    icon: "fab fa-whatsapp",
    status: "Coming Q1 2026",
    description:
      "Track expenses effortlessly via WhatsApp messages. No app installation needed - just send a message and let AI do the rest.",
    benefits: [
      "Log expenses via text, photo, or voice note",
      "Instant expense confirmation and categorization",
      "Works on any device with WhatsApp",
      "Perfect for on-the-go expense tracking",
    ],
    priority: "high",
    color: "green",
  },
  {
    title: "Bank Statement Analysis",
    icon: "fas fa-file-invoice-dollar",
    status: "Coming Q1 2026",
    description:
      "Upload your bank statements and let AI automatically categorize and analyze all your transactions in seconds.",
    benefits: [
      "Auto-import transactions from PDF statements",
      "AI-powered categorization of all expenses",
      "Detect recurring charges and subscriptions",
      "Comprehensive spending analysis reports",
    ],
    priority: "high",
    color: "blue",
  },
  {
    title: "Smart Bill Splitting",
    icon: "fas fa-receipt",
    status: "Coming Q2 2026",
    description:
      "Split bills instantly with friends, roommates, or colleagues. Perfect for dinners, trips, and shared expenses.",
    benefits: [
      "Split by percentage, equal share, or custom amounts",
      "Scan receipts to auto-split items",
      "Track who paid what and who owes whom",
      "Instant settlement via UPI/Bank transfer links",
    ],
    priority: "high",
    color: "purple",
  },
  {
    title: "Receipt Scanner",
    icon: "fas fa-camera",
    status: "Coming Q2 2026",
    description:
      "Snap a photo of your receipt and let AI extract all the details automatically.",
    benefits: [
      "Auto-extract vendor, amount, and date",
      "Store receipt images for records",
      "Works with any receipt format",
      "Reduce manual data entry",
    ],
    priority: "medium",
    color: "orange",
  },
  {
    title: "Budget Alerts & Notifications",
    icon: "fas fa-bell",
    status: "Coming Q3 2026",
    description:
      "Get real-time notifications when you're approaching or exceeding your budget limits.",
    benefits: [
      "Custom alerts for different categories",
      "Weekly and monthly spending summaries",
      "Unusual spending pattern detection",
      "Multi-channel notifications (Email, SMS, Push)",
    ],
    priority: "high",
    color: "pink",
  },
  {
    title: "Investment Tracking",
    icon: "fas fa-chart-line",
    status: "Coming Q3 2026",
    description:
      "Track your investment portfolio alongside your expenses for a complete financial picture.",
    benefits: [
      "Real-time stock and crypto tracking",
      "Portfolio performance analytics",
      "Net worth calculator",
      "Investment vs. spending insights",
    ],
    priority: "medium",
    color: "cyan",
  },
  {
    title: "Smart Recommendations",
    icon: "fas fa-lightbulb",
    status: "Coming Q4 2026",
    description:
      "Get AI-powered suggestions to optimize your spending and increase savings.",
    benefits: [
      "Find cheaper alternatives for subscriptions",
      "Identify wasteful spending patterns",
      "Personalized savings challenges",
      "Money-saving tips based on your habits",
    ],
    priority: "medium",
    color: "indigo",
  },
  {
    title: "Group Expense Manager",
    icon: "fas fa-users",
    status: "Coming Q4 2026",
    description:
      "Create groups for trips, households, or projects and manage shared expenses effortlessly.",
    benefits: [
      "Create unlimited expense groups",
      "Real-time balance tracking for all members",
      "Automatic expense categorization by group",
      "Export group expense reports",
    ],
    priority: "low",
    color: "rose",
  },
];

const colorClasses: Record<ColorType, { bg: string; text: string; light: string; border: string }> = {
  green: { bg: "bg-emerald-500", text: "text-emerald-500", light: "bg-emerald-50", border: "border-emerald-200" },
  blue: { bg: "bg-blue-500", text: "text-blue-500", light: "bg-blue-50", border: "border-blue-200" },
  purple: { bg: "bg-purple-500", text: "text-purple-500", light: "bg-purple-50", border: "border-purple-200" },
  orange: { bg: "bg-orange-500", text: "text-orange-500", light: "bg-orange-50", border: "border-orange-200" },
  pink: { bg: "bg-pink-500", text: "text-pink-500", light: "bg-pink-50", border: "border-pink-200" },
  cyan: { bg: "bg-cyan-500", text: "text-cyan-500", light: "bg-cyan-50", border: "border-cyan-200" },
  indigo: { bg: "bg-indigo-500", text: "text-indigo-500", light: "bg-indigo-50", border: "border-indigo-200" },
  rose: { bg: "bg-rose-500", text: "text-rose-500", light: "bg-rose-50", border: "border-rose-200" },
