const priorityLabels: Record<PriorityType, { label: string; class: string }> = {
  high: { label: "High Priority", class: "bg-red-100 text-red-600" },
  medium: { label: "In Development", class: "bg-amber-100 text-amber-600" },
  low: { label: "Planned", class: "bg-slate-100 text-slate-600" },
