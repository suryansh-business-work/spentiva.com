---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const lastUpdated = "December 2, 2026";

const cookieTypes = [
  {
    icon: "fas fa-shield-alt",
    title: "Essential Cookies",
    color: "green",
    description: "These cookies are necessary for the website to function properly. They enable basic functions like page navigation and access to secure areas.",
    items: ["User authentication", "Security features", "Session management"],
    required: true,
  },
  {
    icon: "fas fa-chart-line",
    title: "Analytics Cookies",
    color: "blue",
    description: "These cookies help us understand how visitors interact with our website by collecting and reporting information anonymously.",
    items: ["Page views and user behavior", "Traffic sources", "Performance metrics"],
    required: false,
  },
  {
    icon: "fas fa-cog",
    title: "Functional Cookies",
    color: "purple",
    description: "These cookies enable enhanced functionality and personalization, such as remembering your preferences.",
    items: ["Language preferences", "Theme settings", "User preferences"],
    required: false,
  },
  {
    icon: "fas fa-ad",
    title: "Marketing Cookies",
    color: "orange",
    description: "These cookies are used to track visitors across websites to display relevant advertisements.",
    items: ["Personalized ads", "Campaign effectiveness", "Social media integration"],
    required: false,
  },
];

const colorClasses: Record<string, { bg: string; text: string; light: string; border: string }> = {
  green: { bg: "bg-emerald-500", text: "text-emerald-600", light: "bg-emerald-50", border: "border-emerald-200" },
  blue: { bg: "bg-blue-500", text: "text-blue-600", light: "bg-blue-50", border: "border-blue-200" },
  purple: { bg: "bg-purple-500", text: "text-purple-600", light: "bg-purple-50", border: "border-purple-200" },
  orange: { bg: "bg-orange-500", text: "text-orange-600", light: "bg-orange-50", border: "border-orange-200" },
};
---

<BaseLayout
  title="Cookie Policy - Spentiva by Exyconn"
  description="Learn about how Spentiva uses cookies to enhance your experience. Understand our cookie policy and manage your preferences."
  keywords="cookie policy, privacy, data collection, cookies, tracking, Spentiva"
>
  <Header />

  <!-- Hero Section -->
  <section
    class="relative pt-32 pb-20 lg:pt-40 lg:pb-24 overflow-hidden"
    style="background: linear-gradient(135deg, #ea580c 0%, #f97316 50%, #fb923c 100%);"
  >
    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 -left-20 w-60 h-60 bg-amber-300/20 rounded-full blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div class="max-w-4xl mx-auto text-center fade-in-up">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-white/20 backdrop-blur-sm rounded-2xl mb-6">
          <i class="fas fa-cookie-bite text-4xl text-white"></i>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-white tracking-tight">
          Cookie Policy
        </h1>
        <p class="text-xl text-white/90 max-w-2xl mx-auto leading-relaxed mb-4">
          We use cookies to enhance your browsing experience. Learn about the cookies we use and how to manage them.
        </p>
        <p class="text-white/70 text-sm">
          <i class="fas fa-calendar-alt mr-2"></i>
          Last Updated: {lastUpdated}
        </p>
      </div>
    </div>
    
    <!-- Wave Divider -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 80" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
        <path d="M0 80L60 70C120 60 240 40 360 30C480 20 600 20 720 25C840 30 960 40 1080 45C1200 50 1320 50 1380 50L1440 50V80H1380C1320 80 1200 80 1080 80C960 80 840 80 720 80C600 80 480 80 360 80C240 80 120 80 60 80H0Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- What Are Cookies -->
  <section class="py-16 lg:py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="bg-gradient-to-r from-orange-50 to-amber-50 rounded-3xl p-8 md:p-12 border border-orange-100">
        <div class="flex flex-col md:flex-row items-start gap-6">
          <div class="w-16 h-16 bg-orange-500 rounded-2xl flex items-center justify-center flex-shrink-0">
            <i class="fas fa-question-circle text-white text-2xl"></i>
          </div>
          <div>
            <h2 class="text-2xl md:text-3xl font-bold text-text-primary mb-4">What Are Cookies?</h2>
            <p class="text-text-secondary leading-relaxed text-lg">
              Cookies are small text files that are placed on your computer or mobile device when you visit our website. They are widely used to make websites work more efficiently, provide a better user experience, and give information to website owners.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Cookie Types -->
  <section class="py-16 lg:py-20 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <span class="inline-block text-orange-500 text-sm font-bold uppercase tracking-wider mb-4">Cookie Types</span>
        <h2 class="text-3xl md:text-4xl font-bold text-text-primary mb-4">How We Use Cookies</h2>
        <p class="text-text-secondary text-lg max-w-2xl mx-auto">
          We use different types of cookies for various purposes
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-6">
        {cookieTypes.map((cookie, index) => (
          <div 
            class={`bg-white rounded-2xl p-8 border-2 ${colorClasses[cookie.color].border} hover:shadow-xl transition-all duration-300 fade-in-up`}
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="flex items-start justify-between mb-4">
              <div class={`w-14 h-14 ${colorClasses[cookie.color].bg} rounded-xl flex items-center justify-center`}>
                <i class={`${cookie.icon} text-2xl text-white`}></i>
              </div>
              {cookie.required ? (
                <span class="bg-emerald-100 text-emerald-600 text-xs font-bold px-3 py-1 rounded-full uppercase">Required</span>
              ) : (
                <span class="bg-gray-100 text-gray-600 text-xs font-bold px-3 py-1 rounded-full uppercase">Optional</span>
              )}
            </div>
            
            <h3 class="text-xl font-bold text-text-primary mb-3">{cookie.title}</h3>
            <p class="text-text-secondary leading-relaxed mb-4">{cookie.description}</p>
            
            <div class={`${colorClasses[cookie.color].light} rounded-xl p-4`}>
              <p class="text-sm font-semibold text-gray-700 mb-2">Examples:</p>
              <ul class="space-y-1">
                {cookie.items.map((item) => (
                  <li class="flex items-center gap-2 text-sm text-gray-600">
                    <i class={`fas fa-check ${colorClasses[cookie.color].text} text-xs`}></i>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Managing Cookies -->
  <section class="py-16 lg:py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="text-center mb-12">
        <span class="inline-block text-orange-500 text-sm font-bold uppercase tracking-wider mb-4">Your Control</span>
        <h2 class="text-3xl md:text-4xl font-bold text-text-primary mb-4">Managing Your Cookie Preferences</h2>
        <p class="text-text-secondary text-lg max-w-2xl mx-auto">
          You have full control over how cookies are used on your device
        </p>
      </div>
      
      <div class="space-y-6">
        <div class="bg-gradient-to-r from-blue-50 to-cyan-50 rounded-2xl p-8 border border-blue-100">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center flex-shrink-0">
              <i class="fas fa-sliders-h text-white text-lg"></i>
            </div>
            <div>
              <h3 class="text-xl font-bold text-text-primary mb-3">Browser Controls</h3>
              <p class="text-text-secondary leading-relaxed mb-4">
                Most web browsers allow you to control cookies through their settings. You can configure your browser to:
              </p>
              <div class="grid sm:grid-cols-2 gap-3">
                <div class="flex items-center gap-2 text-sm text-gray-700 bg-white rounded-lg px-4 py-3">
                  <i class="fas fa-ban text-red-400"></i>
                  Block all cookies
                </div>
                <div class="flex items-center gap-2 text-sm text-gray-700 bg-white rounded-lg px-4 py-3">
                  <i class="fas fa-check-circle text-green-400"></i>
                  Accept specific cookies
                </div>
                <div class="flex items-center gap-2 text-sm text-gray-700 bg-white rounded-lg px-4 py-3">
                  <i class="fas fa-trash text-orange-400"></i>
                  Delete on exit
                </div>
                <div class="flex items-center gap-2 text-sm text-gray-700 bg-white rounded-lg px-4 py-3">
                  <i class="fas fa-bell text-blue-400"></i>
                  Receive notifications
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-amber-50 rounded-2xl p-6 border border-amber-200">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-amber-400 rounded-lg flex items-center justify-center flex-shrink-0">
              <i class="fas fa-exclamation-triangle text-white"></i>
            </div>
            <div>
              <h4 class="font-bold text-gray-900 mb-1">Important Note</h4>
              <p class="text-gray-700 text-sm leading-relaxed">
                Please note that blocking or deleting cookies may impact your experience on our website and limit certain features. Essential cookies cannot be disabled as they are required for the website to function.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Third Party & Updates -->
  <section class="py-16 lg:py-20 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-white rounded-2xl p-8 border border-gray-100">
          <div class="w-12 h-12 bg-purple-500 rounded-xl flex items-center justify-center mb-4">
            <i class="fas fa-external-link-alt text-white text-lg"></i>
          </div>
          <h3 class="text-xl font-bold text-text-primary mb-3">Third-Party Cookies</h3>
          <p class="text-text-secondary leading-relaxed mb-4">
            We may also use third-party services that set cookies on your device:
          </p>
          <ul class="space-y-2">
            <li class="flex items-center gap-2 text-sm text-gray-600">
              <i class="fab fa-google text-blue-500"></i>
              Google Analytics
            </li>
            <li class="flex items-center gap-2 text-sm text-gray-600">
              <i class="fas fa-share-alt text-purple-500"></i>
              Social media platforms
            </li>
            <li class="flex items-center gap-2 text-sm text-gray-600">
              <i class="fas fa-credit-card text-green-500"></i>
              Payment processors
            </li>
          </ul>
        </div>
        
        <div class="bg-white rounded-2xl p-8 border border-gray-100">
          <div class="w-12 h-12 bg-emerald-500 rounded-xl flex items-center justify-center mb-4">
            <i class="fas fa-sync-alt text-white text-lg"></i>
          </div>
          <h3 class="text-xl font-bold text-text-primary mb-3">Policy Updates</h3>
          <p class="text-text-secondary leading-relaxed">
            We may update this Cookie Policy from time to time to reflect changes in our practices or for legal, regulatory, or operational reasons. We encourage you to review this page periodically for the latest information.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-16 lg:py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="bg-gradient-to-r from-gray-900 to-gray-800 rounded-3xl p-8 md:p-12 text-center">
        <div class="w-16 h-16 bg-orange-500 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <i class="fas fa-question-circle text-white text-2xl"></i>
        </div>
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">Questions About Cookies?</h2>
        <p class="text-gray-300 leading-relaxed mb-8 max-w-xl mx-auto">
          If you have any questions about our use of cookies or this policy, we're here to help.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center px-8 py-4 bg-orange-500 text-white font-semibold rounded-xl hover:bg-orange-600 transition-all duration-300 shadow-lg hover:shadow-xl cursor-pointer"
        >
          <i class="fas fa-envelope mr-2"></i>
          Contact Us
        </a>
      </div>
    </div>
  </section>

  <!-- Related Links -->
  <section class="py-16 bg-gray-50 border-t border-gray-100">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-10">
        <h2 class="text-2xl font-bold text-text-primary mb-2">Related Legal Documents</h2>
        <p class="text-text-secondary">Review our other policies</p>
      </div>
      
      <div class="grid sm:grid-cols-3 gap-6 max-w-4xl mx-auto">
        <a href="/privacy-policy" class="group bg-white rounded-xl p-6 border border-gray-200 hover:border-orange-300 hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <i class="fas fa-shield-alt text-primary-500 text-xl"></i>
          </div>
          <h3 class="font-bold text-text-primary mb-2">Privacy Policy</h3>
          <p class="text-sm text-text-secondary">How we protect your data</p>
        </a>
        
        <a href="/terms-and-conditions" class="group bg-white rounded-xl p-6 border border-gray-200 hover:border-orange-300 hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <i class="fas fa-file-contract text-blue-500 text-xl"></i>
          </div>
          <h3 class="font-bold text-text-primary mb-2">Terms & Conditions</h3>
          <p class="text-sm text-text-secondary">Rules for using our services</p>
        </a>
        
        <a href="/data-policy" class="group bg-white rounded-xl p-6 border border-gray-200 hover:border-orange-300 hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <i class="fas fa-database text-purple-500 text-xl"></i>
          </div>
          <h3 class="font-bold text-text-primary mb-2">Data Policy</h3>
          <p class="text-sm text-text-secondary">How we handle your data</p>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
