---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const stats = [
  { number: "50K+", label: "Active Users" },
  { number: "150+", label: "Countries" },
  { number: "$10M+", label: "Expenses Tracked" },
  { number: "4.9/5", label: "App Store Rating" },
];

const team = [
  {
    name: "Alex Morgan",
    role: "CEO & Co-founder",
    image: "https://i.pravatar.cc/300?img=11",
    bio: "Former fintech executive with a passion for personal finance.",
  },
  {
    name: "Sarah Chen",
    role: "CTO & Co-founder",
    image: "https://i.pravatar.cc/300?img=5",
    bio: "AI researcher turned entrepreneur, building smarter financial tools.",
  },
  {
    name: "David Kim",
    role: "Head of Product",
    image: "https://i.pravatar.cc/300?img=3",
    bio: "Product visionary focused on creating intuitive user experiences.",
  },
];

const values = [
  {
    icon: "fas fa-lock",
    title: "Privacy First",
    description:
      "We believe your financial data belongs to you. We never sell your personal information.",
  },
  {
    icon: "fas fa-lightbulb",
    title: "Innovation",
    description:
      "We constantly push the boundaries of what's possible with AI in personal finance.",
  },
  {
    icon: "fas fa-users",
    title: "Community",
    description:
      "We build for our users, listening to feedback and evolving with their needs.",
  },
];
---

<BaseLayout
  title="About Us - Spentiva by Exyconn"
  description="Learn about our mission to democratize personal finance management through AI."
>
  <Header />

  <!-- Hero Section - Enhanced -->
  <section
    class="relative bg-gradient-to-br from-primary-50 via-white to-accent-50 pt-32 pb-20 lg:pt-40 lg:pb-28 overflow-hidden"
  >
    {/* Decorative background elements */}
    <div class="absolute top-20 right-10 w-72 h-72 bg-primary-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
    <div class="absolute bottom-20 left-10 w-72 h-72 bg-accent-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div
        class="max-w-4xl mx-auto text-center"
        style="animation: fadeInUp 0.8s ease-out"
      >
        <span class="inline-block px-4 py-2 bg-white text-primary-600 rounded-full text-sm font-semibold mb-6 border border-primary-200 shadow-sm">
          ðŸŒŸ About Spentiva
        </span>
        <h1
          class="text-5xl md:text-6xl lg:text-7xl font-bold mb-8 text-text-primary tracking-tight leading-tight"
        >
          Empowering
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-500 to-accent-500"> Financial Freedom</span>
        </h1>
        <p
          class="text-xl md:text-2xl text-text-secondary max-w-3xl mx-auto leading-relaxed"
        >
          We're on a mission to make personal finance management accessible,
          intelligent, and effortless for everyone through cutting-edge AI technology.
        </p>
      </div>
    </div>
  </section>

  <!-- Stats Section - Enhanced -->
  <section class="py-16 bg-gradient-to-r from-primary-600 via-primary-500 to-accent-600 relative overflow-hidden">
    {/* Background pattern */}
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 32px 32px;"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12">
        {
          stats.map((stat, index) => (
            <div 
              class="text-center group"
              style={`animation: fadeInUp 0.6s ease-out ${index * 0.1}s backwards`}
            >
              <div class="relative inline-block mb-4">
                <div class="absolute inset-0 bg-white/20 rounded-2xl blur-xl group-hover:bg-white/30 transition-all"></div>
                <div class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-2 relative group-hover:scale-110 transition-transform duration-300">
                  {stat.number}
                </div>
              </div>
              <div class="text-white/90 font-semibold text-base md:text-lg">{stat.label}</div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Story Section - Enhanced -->
  <section class="py-20 sm:py-24 lg:py-32 bg-white relative overflow-hidden">
    {/* Background decoration */}
    <div class="absolute top-0 right-0 w-96 h-96 bg-primary-100 rounded-full mix-blend-multiply filter blur-3xl opacity-20"></div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 lg:gap-20 items-center">
        <div class="relative group">
          <div
            class="absolute -inset-6 bg-gradient-to-r from-primary-200 to-accent-200 rounded-3xl blur-2xl opacity-30 group-hover:opacity-50 transition-opacity duration-500"
          >
          </div>
          <div class="relative">
            <img
              src="https://images.unsplash.com/photo-1556761175-5973dc0f32e7?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80"
              alt="Team collaboration"
              class="relative rounded-2xl shadow-2xl w-full object-cover h-[400px] lg:h-[500px] border-4 border-white group-hover:scale-[1.02] transition-transform duration-500"
            />
            {/* Decorative badge */}
            <div class="absolute -bottom-6 -right-6 bg-gradient-to-br from-primary-500 to-primary-600 text-white px-6 py-4 rounded-2xl shadow-2xl">
              <div class="text-center">
                <div class="text-3xl font-bold">2023</div>
                <div class="text-sm font-medium">Founded</div>
              </div>
            </div>
          </div>
        </div>
        <div>
          <span class="inline-block px-4 py-2 bg-primary-50 text-primary-600 rounded-full text-sm font-semibold mb-6 border border-primary-100">
            ðŸ“– Our Journey
          </span>
          <h2
            class="text-4xl sm:text-5xl font-bold text-text-primary mb-8 tracking-tight leading-tight"
          >
            Our Story of
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-500 to-accent-500"> Innovation</span>
          </h2>
          <div class="space-y-6 text-lg text-text-secondary leading-relaxed">
            <p class="text-xl">
              Founded in 2023, Spentiva emerged from a simple observation:
              managing personal finances was too complicated, time-consuming,
              and disconnected from people's daily lives.
            </p>
            <p>
              We realized that while everyone needed better financial tools,
              existing solutions remained stuck in standalone apps that required
              manual entry and constant attention.
            </p>
            <p>
              By combining intuitive design with the power of Artificial
              Intelligence, we created a solution that meets users where they
              are. Today, Spentiva helps thousands of people across the globe
              take control of their financial future with simple, intelligent
              interactions.
            </p>
            <div class="flex items-center space-x-4 pt-6">
              <div class="flex -space-x-3">
                <img src="https://i.pravatar.cc/40?img=1" alt="User" class="w-10 h-10 rounded-full border-2 border-white" />
                <img src="https://i.pravatar.cc/40?img=2" alt="User" class="w-10 h-10 rounded-full border-2 border-white" />
                <img src="https://i.pravatar.cc/40?img=3" alt="User" class="w-10 h-10 rounded-full border-2 border-white" />
                <div class="w-10 h-10 rounded-full border-2 border-white bg-primary-500 flex items-center justify-center text-white text-sm font-bold">+50K</div>
              </div>
              <span class="text-sm font-semibold text-text-primary">Trusted by thousands worldwide</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section - Enhanced -->
  <section
    class="py-20 sm:py-24 lg:py-32 bg-gradient-to-br from-gray-50 via-white to-primary-50 border-y border-border-light relative overflow-hidden"
  >
    {/* Background pattern */}
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgb(37, 168, 126) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div class="text-center mb-20 max-w-3xl mx-auto">
        <span class="inline-block px-4 py-2 bg-white text-primary-600 rounded-full text-sm font-semibold mb-4 border border-primary-200 shadow-sm">
          ðŸ’Ž What Drives Us
        </span>
        <h2
          class="text-4xl sm:text-5xl font-bold text-text-primary mb-6 tracking-tight"
        >
          Our Core <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-500 to-accent-500">Values</span>
        </h2>
        <p class="text-xl text-text-secondary leading-relaxed">
          The principles that guide everything we do and shape our culture
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-8 lg:gap-10">
        {
          values.map((value, index) => (
            <div
              class="bg-white rounded-2xl border-2 border-border-light p-10 hover:border-primary-300 hover:shadow-2xl transition-all duration-500 text-center group relative overflow-hidden"
              style={`animation: fadeInUp 0.6s ease-out ${index * 0.15}s backwards`}
            >
              {/* Hover gradient effect */}
              <div class="absolute inset-0 bg-gradient-to-br from-primary-50/0 to-accent-50/0 group-hover:from-primary-50/50 group-hover:to-accent-50/30 transition-all duration-500 rounded-2xl"></div>
              
              <div class="relative z-10">
                <div class="w-20 h-20 bg-gradient-to-br from-primary-100 to-primary-50 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 group-hover:rotate-6 transition-all duration-500 shadow-lg shadow-primary-200/50">
                  <i class={`${value.icon} text-3xl text-primary-500`} />
                </div>
                <h3 class="text-2xl font-bold text-text-primary mb-4 group-hover:text-primary-600 transition-colors">
                  {value.title}
                </h3>
                <p class="text-text-secondary leading-relaxed text-base">
                  {value.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Team Section - Enhanced -->
  <section class="py-20 sm:py-24 lg:py-32 bg-white relative overflow-hidden">
    {/* Decorative elements */}
    <div class="absolute bottom-0 left-0 w-72 h-72 bg-accent-100 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div class="text-center mb-20 max-w-3xl mx-auto">
        <span class="inline-block px-4 py-2 bg-primary-50 text-primary-600 rounded-full text-sm font-semibold mb-4 border border-primary-100">
          ðŸ‘¥ Leadership Team
        </span>
        <h2
          class="text-4xl sm:text-5xl font-bold text-text-primary mb-6 tracking-tight"
        >
          Meet the <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-500 to-accent-500">Team</span>
        </h2>
        <p class="text-xl text-text-secondary leading-relaxed">
          The passionate innovators building the future of financial management
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-10 lg:gap-12">
        {
          team.map((member, index) => (
            <div
              class="group text-center"
              style={`animation: fadeInUp 0.6s ease-out ${index * 0.15}s backwards`}
            >
              <div class="relative mb-8 inline-block">
                {/* Gradient ring on hover */}
                <div class="absolute -inset-2 bg-gradient-to-r from-primary-400 to-accent-400 rounded-full opacity-0 group-hover:opacity-100 blur-lg transition-all duration-500" />
                <div class="relative">
                  <img
                    src={member.image}
                    alt={member.name}
                    class="w-56 h-56 rounded-full object-cover shadow-2xl border-4 border-white group-hover:scale-105 transition-all duration-500 relative z-10"
                  />
                  {/* Role badge */}
                  <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 bg-gradient-to-r from-primary-500 to-primary-600 text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg whitespace-nowrap">
                    {member.role}
                  </div>
                </div>
              </div>
              <h3 class="text-2xl font-bold text-text-primary mb-3 mt-6 group-hover:text-primary-600 transition-colors">
                {member.name}
              </h3>
              <p class="text-text-secondary text-base leading-relaxed max-w-xs mx-auto">
                {member.bio}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section - Enhanced -->
  <section
    class="py-20 sm:py-24 lg:py-32 bg-gradient-to-br from-primary-500 via-primary-600 to-accent-600 border-t border-primary-400 relative overflow-hidden"
  >
    {/* Animated background elements */}
    <div class="absolute inset-0">
      <div class="absolute top-10 left-10 w-72 h-72 bg-white/10 rounded-full mix-blend-overlay filter blur-3xl animate-blob"></div>
      <div class="absolute bottom-10 right-10 w-72 h-72 bg-accent-300/20 rounded-full mix-blend-overlay filter blur-3xl animate-blob animation-delay-2000"></div>
    </div>
    
    {/* Background pattern */}
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl text-center relative z-10">
      <div class="inline-flex items-center px-4 py-2 bg-white/20 backdrop-blur-sm text-white rounded-full text-sm font-semibold mb-8 border border-white/30">
        <i class="fas fa-handshake text-yellow-300 mr-2"></i>
        Join Our Community
      </div>
      
      <h2
        class="text-4xl md:text-5xl lg:text-6xl font-bold mb-8 text-white tracking-tight leading-tight"
      >
        Join Our Journey
      </h2>
      <p
        class="text-xl md:text-2xl mb-12 text-white/90 max-w-2xl mx-auto leading-relaxed font-medium"
      >
        Be part of the financial revolution. Start managing your money smarter
        today with AI-powered insights.
      </p>
      <a
        href="https://auth.spentiva.com/signup"
        class="group inline-flex items-center justify-center px-10 py-5 bg-white text-primary-600 font-bold rounded-2xl hover:bg-gray-50 transform hover:-translate-y-1 transition-all shadow-2xl hover:shadow-3xl text-lg relative overflow-hidden"
      >
        <span class="relative z-10 flex items-center">
          <i class="fas fa-rocket mr-3 text-xl"></i>
          Get Started Free
          <i class="fas fa-arrow-right ml-3 group-hover:translate-x-1 transition-transform"></i>
        </span>
        {/* Shimmer effect */}
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent translate-x-[-200%] group-hover:translate-x-[200%] transition-transform duration-1000"></div>
      </a>
      
      <p class="mt-8 text-white/80 text-sm">No credit card required Â· Free forever plan Â· Cancel anytime</p>
    </div>
  </section>

  <Footer />
</BaseLayout>
