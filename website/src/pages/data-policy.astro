---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const lastUpdated = "October 25, 2023";

const dataRights = [
  {
    icon: "fas fa-user-shield",
    title: "Data Ownership",
    description: "You own your data. We do not claim ownership over your financial data, personal information, or other content you provide.",
    color: "purple",
  },
  {
    icon: "fas fa-download",
    title: "Data Portability",
    description: "Export your data anytime. Download your transaction history and personal information in standard formats.",
    color: "blue",
  },
  {
    icon: "fas fa-trash-alt",
    title: "Right to Delete",
    description: "Request deletion of your account and all associated data at any time through settings or support.",
    color: "red",
  },
  {
    icon: "fas fa-eye",
    title: "Transparency",
    description: "Full visibility into what data we collect and how it's used. No hidden practices.",
    color: "green",
  },
];

const sections = [
  {
    id: "ownership",
    icon: "fas fa-crown",
    title: "Data Ownership",
    content: `You own your data. We do not claim ownership over the financial data, personal information, or other content you provide to us. You grant us a license to use your data solely for the purpose of providing and improving our services.`,
  },
  {
    id: "storage",
    icon: "fas fa-server",
    title: "Data Storage and Processing",
    content: `Your data is stored on secure servers located in India and other jurisdictions. We use industry-standard encryption (AES-256) to protect your data both in transit and at rest. Our infrastructure is hosted on enterprise-grade cloud platforms with 99.9% uptime guarantee.`,
  },
  {
    id: "retention",
    icon: "fas fa-clock",
    title: "Data Retention",
    content: `We retain your data for as long as your account is active or as needed to provide you services. We may also retain and use your information as necessary to comply with our legal obligations, resolve disputes, and enforce our agreements.`,
  },
  {
    id: "deletion",
    icon: "fas fa-trash-alt",
    title: "Data Deletion",
    content: `You have the right to request the deletion of your account and associated data at any time. You can do this through your account settings or by contacting our support team. Upon request, we will delete your personal information from our active databases within 30 days, subject to any legal retention requirements.`,
  },
  {
    id: "portability",
    icon: "fas fa-file-export",
    title: "Data Portability",
    content: `You have the right to export your data from our platform. We provide tools that allow you to download your transaction history, expense reports, and other personal information in standard, machine-readable formats (CSV, JSON, PDF).`,
  },
  {
    id: "contact",
    icon: "fas fa-envelope",
    title: "Contact Us",
    content: `If you have any questions or concerns about our data practices, please contact our Data Protection Officer.`,
    contactEmail: "data@spentiva.com",
  },
];

const colorClasses: Record<string, { bg: string; text: string; light: string }> = {
  purple: { bg: "bg-purple-500", text: "text-purple-600", light: "bg-purple-50" },
  blue: { bg: "bg-blue-500", text: "text-blue-600", light: "bg-blue-50" },
  red: { bg: "bg-red-500", text: "text-red-600", light: "bg-red-50" },
  green: { bg: "bg-emerald-500", text: "text-emerald-600", light: "bg-emerald-50" },
};
---

<BaseLayout
  title="Data Policy - Spentiva by Exyconn"
  description="Learn how we handle, store, and process your data at Spentiva. Your data, your control."
>
  <Header />

  <!-- Hero Section -->
  <section
    class="relative pt-32 pb-20 lg:pt-40 lg:pb-24 overflow-hidden"
    style="background: linear-gradient(135deg, #7c3aed 0%, #8b5cf6 50%, #a78bfa 100%);"
  >
    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 -left-20 w-60 h-60 bg-pink-500/20 rounded-full blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div class="max-w-4xl mx-auto text-center fade-in-up">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-white/20 backdrop-blur-sm rounded-2xl mb-6">
          <i class="fas fa-database text-4xl text-white"></i>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-white tracking-tight">
          Data Policy
        </h1>
        <p class="text-xl text-white/90 max-w-2xl mx-auto leading-relaxed mb-4">
          Your data belongs to you. Learn how we handle, protect, and give you control over your information.
        </p>
        <p class="text-white/70 text-sm">
          <i class="fas fa-calendar-alt mr-2"></i>
          Last Updated: {lastUpdated}
        </p>
      </div>
    </div>
    
    <!-- Wave Divider -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 80" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
        <path d="M0 80L60 70C120 60 240 40 360 30C480 20 600 20 720 25C840 30 960 40 1080 45C1200 50 1320 50 1380 50L1440 50V80H1380C1320 80 1200 80 1080 80C960 80 840 80 720 80C600 80 480 80 360 80C240 80 120 80 60 80H0Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- Your Data Rights -->
  <section class="py-16 lg:py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <span class="inline-block text-purple-600 text-sm font-bold uppercase tracking-wider mb-4">Your Rights</span>
        <h2 class="text-3xl md:text-4xl font-bold text-text-primary mb-4">Your Data, Your Control</h2>
        <p class="text-text-secondary text-lg max-w-2xl mx-auto">
          We believe in transparency and giving you complete control over your information
        </p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {dataRights.map((right, index) => (
          <div 
            class="bg-white rounded-2xl p-6 border border-gray-100 hover:shadow-xl hover:border-purple-200 transition-all duration-300 text-center fade-in-up"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class={`w-16 h-16 ${colorClasses[right.color].bg} rounded-2xl flex items-center justify-center mx-auto mb-4`}>
              <i class={`${right.icon} text-2xl text-white`}></i>
            </div>
            <h3 class="font-bold text-text-primary text-lg mb-2">{right.title}</h3>
            <p class="text-sm text-text-secondary leading-relaxed">{right.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Data Security Banner -->
  <section class="py-12 bg-gradient-to-r from-purple-50 to-pink-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6 bg-white rounded-2xl p-8 border border-purple-100 shadow-lg">
        <div class="flex items-center gap-4">
          <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-2xl flex items-center justify-center">
            <i class="fas fa-lock text-white text-2xl"></i>
          </div>
          <div>
            <h3 class="font-bold text-text-primary text-xl mb-1">Enterprise-Grade Security</h3>
            <p class="text-text-secondary">AES-256 encryption • SOC 2 compliant • 99.9% uptime</p>
          </div>
        </div>
        <div class="flex items-center gap-6">
          <div class="text-center">
            <div class="text-2xl font-bold text-purple-600">256-bit</div>
            <div class="text-xs text-gray-500 uppercase">Encryption</div>
          </div>
          <div class="w-px h-12 bg-gray-200"></div>
          <div class="text-center">
            <div class="text-2xl font-bold text-purple-600">99.9%</div>
            <div class="text-xs text-gray-500 uppercase">Uptime</div>
          </div>
          <div class="w-px h-12 bg-gray-200"></div>
          <div class="text-center">
            <div class="text-2xl font-bold text-purple-600">24/7</div>
            <div class="text-xs text-gray-500 uppercase">Monitoring</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Detailed Sections -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <!-- Introduction -->
      <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-2xl p-8 mb-12 border border-purple-100">
        <p class="text-lg text-text-secondary leading-relaxed">
          This Data Policy outlines how <strong class="text-text-primary">Spentiva by Exyconn</strong> handles your data.
          We believe in transparency and giving you complete control over your
          information. Your trust is our priority.
        </p>
      </div>

      <!-- Sections -->
      <div class="space-y-12">
        {sections.map((section, index) => (
          <div id={section.id} class="scroll-mt-32 fade-in-up" style={`animation-delay: ${index * 100}ms`}>
            <div class="flex items-start gap-4 mb-6">
              <div class="w-14 h-14 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl flex items-center justify-center flex-shrink-0 shadow-lg">
                <i class={`${section.icon} text-xl text-white`}></i>
              </div>
              <div>
                <span class="text-sm font-semibold text-purple-600 uppercase tracking-wider">Section {index + 1}</span>
                <h2 class="text-2xl md:text-3xl font-bold text-text-primary">{section.title}</h2>
              </div>
            </div>
            
            <div class="pl-0 md:pl-[4.5rem]">
              <p class="text-text-secondary leading-relaxed">{section.content}</p>
              
              {section.contactEmail && (
                <div class="bg-gradient-to-r from-gray-900 to-gray-800 rounded-xl p-6 mt-6">
                  <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-purple-500 rounded-xl flex items-center justify-center">
                      <i class="fas fa-envelope text-white text-lg"></i>
                    </div>
                    <div>
                      <p class="text-gray-400 text-sm">Data Protection Officer</p>
                      <a
                        href={`mailto:${section.contactEmail}`}
                        class="text-xl font-bold text-white hover:text-purple-400 transition-colors"
                      >
                        {section.contactEmail}
                      </a>
                    </div>
                  </div>
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Related Links -->
  <section class="py-16 bg-gray-50 border-t border-gray-100">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-10">
        <h2 class="text-2xl font-bold text-text-primary mb-2">Related Legal Documents</h2>
        <p class="text-text-secondary">Review our other policies</p>
      </div>
      
      <div class="grid sm:grid-cols-3 gap-6 max-w-4xl mx-auto">
        <a href="/privacy-policy" class="group bg-white rounded-xl p-6 border border-gray-200 hover:border-purple-300 hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <i class="fas fa-shield-alt text-primary-500 text-xl"></i>
          </div>
          <h3 class="font-bold text-text-primary mb-2">Privacy Policy</h3>
          <p class="text-sm text-text-secondary">How we protect your privacy</p>
        </a>
        
        <a href="/terms-and-conditions" class="group bg-white rounded-xl p-6 border border-gray-200 hover:border-purple-300 hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <i class="fas fa-file-contract text-blue-500 text-xl"></i>
          </div>
          <h3 class="font-bold text-text-primary mb-2">Terms & Conditions</h3>
          <p class="text-sm text-text-secondary">Rules for using our services</p>
        </a>
        
        <a href="/cookie-policy" class="group bg-white rounded-xl p-6 border border-gray-200 hover:border-purple-300 hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <i class="fas fa-cookie-bite text-orange-500 text-xl"></i>
          </div>
          <h3 class="font-bold text-text-primary mb-2">Cookie Policy</h3>
          <p class="text-sm text-text-secondary">Learn about cookies we use</p>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
