---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Newsletter from "../../components/Newsletter.astro";

const posts = [
  {
    title: "How to Save Money on Groceries Without Coupons",
    excerpt:
      "Discover practical tips and tricks to reduce your grocery bill without spending hours clipping coupons.",
    date: "October 24, 2023",
    author: "Sarah Chen",
    authorAvatar: "SC",
    category: "Savings",
    slug: "save-money-groceries",
    image:
      "https://images.unsplash.com/photo-1542838132-92c53300491e?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    readTime: "5 min",
    featured: true,
  },
  {
    title: "The Psychology of Spending: Why We Buy What We Buy",
    excerpt:
      "Understand the hidden triggers that cause impulse spending and learn how to overcome them.",
    date: "October 18, 2023",
    author: "Dr. Alex Morgan",
    authorAvatar: "AM",
    category: "Behavior",
    slug: "psychology-of-spending",
    image:
      "https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    readTime: "8 min",
    featured: true,
  },
  {
    title: "5 Investment Myths That Are Holding You Back",
    excerpt:
      "Debunking common misconceptions about investing that might be preventing you from building wealth.",
    date: "October 12, 2023",
    author: "David Kim",
    authorAvatar: "DK",
    category: "Investing",
    slug: "investment-myths",
    image:
      "https://images.unsplash.com/photo-1579532537598-459ecdaf39cc?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    readTime: "6 min",
    featured: false,
  },
  {
    title: "Budgeting for Freelancers: A Complete Guide",
    excerpt:
      "How to manage irregular income, save for taxes, and build a safety net when you work for yourself.",
    date: "October 5, 2023",
    author: "Sarah Chen",
    authorAvatar: "SC",
    category: "Freelancing",
    slug: "budgeting-for-freelancers",
    image:
      "https://images.unsplash.com/photo-1450101499163-c8848c66ca85?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    readTime: "10 min",
    featured: false,
  },
  {
    title: "The Ultimate Guide to Emergency Funds",
    excerpt:
      "Why you need one, how much to save, and where to keep it for maximum security and growth.",
    date: "September 28, 2023",
    author: "David Kim",
    authorAvatar: "DK",
    category: "Financial Planning",
    slug: "emergency-funds-guide",
    image:
      "https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    readTime: "7 min",
    featured: false,
  },
  {
    title: "Travel on a Budget: See the World for Less",
    excerpt:
      "Expert hacks for finding cheap flights, affordable accommodation, and hidden gems around the globe.",
    date: "September 20, 2023",
    author: "Alex Morgan",
    authorAvatar: "AM",
    category: "Travel",
    slug: "travel-on-budget",
    image:
      "https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    readTime: "9 min",
    featured: false,
  },
];

const featuredPosts = posts.filter(post => post.featured);
const regularPosts = posts.filter(post => !post.featured);

const categories = [
  { name: "All", count: posts.length, active: true },
  { name: "Savings", count: 1 },
  { name: "Investing", count: 1 },
  { name: "Behavior", count: 1 },
  { name: "Travel", count: 1 },
  { name: "Freelancing", count: 1 },
];

const categoryColors: Record<string, string> = {
  Savings: "bg-emerald-500",
  Behavior: "bg-purple-500",
  Investing: "bg-blue-500",
  Freelancing: "bg-orange-500",
  "Financial Planning": "bg-indigo-500",
  Travel: "bg-pink-500",
};
---

<BaseLayout
  title="Blog - Spentiva by Exyconn"
  description="Expert advice, tips, and insights on personal finance, budgeting, and wealth building."
>
  <Header />

  <!-- Hero Section -->
  <section
    class="relative pt-32 pb-20 lg:pt-40 lg:pb-24 overflow-hidden"
    style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);"
  >
    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-20 right-20 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl animate-blob"></div>
      <div class="absolute bottom-10 left-10 w-80 h-80 bg-blue-500/15 rounded-full blur-3xl animate-blob" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 left-1/3 w-64 h-64 bg-purple-500/10 rounded-full blur-3xl animate-blob" style="animation-delay: 4s;"></div>
      
      <!-- Grid Pattern -->
      <div class="absolute inset-0" style="background-image: radial-gradient(rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 40px 40px;"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div class="max-w-4xl mx-auto text-center fade-in-up">
        <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 mb-6">
          <i class="fas fa-newspaper text-primary-400"></i>
          <span class="text-white/90 text-sm font-medium">Spentiva Blog</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-white tracking-tight">
          Financial <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-400 to-emerald-400">Wisdom</span>
        </h1>
        <p class="text-xl text-white/80 max-w-2xl mx-auto leading-relaxed mb-8">
          Expert advice, tips, and insights to help you master your money and build wealth.
        </p>
        
        <!-- Stats -->
        <div class="flex flex-wrap justify-center gap-8 mt-10">
          <div class="text-center">
            <div class="text-3xl font-bold text-white mb-1">50+</div>
            <div class="text-white/60 text-sm">Articles</div>
          </div>
          <div class="w-px h-12 bg-white/20"></div>
          <div class="text-center">
            <div class="text-3xl font-bold text-white mb-1">10K+</div>
            <div class="text-white/60 text-sm">Readers</div>
          </div>
          <div class="w-px h-12 bg-white/20"></div>
          <div class="text-center">
            <div class="text-3xl font-bold text-white mb-1">Weekly</div>
            <div class="text-white/60 text-sm">New Content</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Wave Divider -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 80" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
        <path d="M0 80L60 70C120 60 240 40 360 30C480 20 600 20 720 25C840 30 960 40 1080 45C1200 50 1320 50 1380 50L1440 50V80H1380C1320 80 1200 80 1080 80C960 80 840 80 720 80C600 80 480 80 360 80C240 80 120 80 60 80H0Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- Featured Posts -->
  <section class="py-16 lg:py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="flex items-center justify-between mb-10">
        <div>
          <span class="text-primary-500 text-sm font-bold uppercase tracking-wider">Featured</span>
          <h2 class="text-3xl md:text-4xl font-bold text-text-primary">Editor's Picks</h2>
        </div>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-8">
        {featuredPosts.map((post, index) => (
          <article class="group relative bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden hover:shadow-2xl transition-all duration-500 fade-in-up" style={`animation-delay: ${index * 150}ms`}>
            <div class="flex flex-col md:flex-row h-full">
              <a href={`/blog/${post.slug}`} class="relative md:w-1/2 h-64 md:h-auto overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent z-10 opacity-60 group-hover:opacity-30 transition-opacity"></div>
                <img
                  src={post.image}
                  alt={post.title}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute top-4 left-4 z-20">
                  <span class={`${categoryColors[post.category] || 'bg-primary-500'} text-white text-xs font-bold px-3 py-1.5 rounded-full uppercase tracking-wider`}>
                    {post.category}
                  </span>
                </div>
              </a>
              
              <div class="md:w-1/2 p-6 md:p-8 flex flex-col justify-center">
                <div class="flex items-center gap-3 text-sm text-text-secondary mb-4">
                  <div class="w-8 h-8 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full flex items-center justify-center text-white text-xs font-bold">
                    {post.authorAvatar}
                  </div>
                  <span class="font-medium">{post.author}</span>
                  <span>â€¢</span>
                  <span>{post.readTime} read</span>
                </div>
                
                <h2 class="text-xl md:text-2xl font-bold text-text-primary mb-3 group-hover:text-primary-500 transition-colors leading-tight">
                  <a href={`/blog/${post.slug}`}>{post.title}</a>
                </h2>
                
                <p class="text-text-secondary leading-relaxed mb-6">
                  {post.excerpt}
                </p>
                
                <div class="flex items-center justify-between mt-auto">
                  <span class="text-sm text-gray-400">{post.date}</span>
                  <a
                    href={`/blog/${post.slug}`}
                    class="inline-flex items-center gap-2 text-primary-500 font-semibold hover:gap-3 transition-all"
                  >
                    Read More
                    <i class="fas fa-arrow-right text-sm"></i>
                  </a>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="py-8 bg-gray-50 border-y border-gray-100 sticky top-20 z-30">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="flex items-center gap-4 overflow-x-auto pb-2 scrollbar-hide">
        <span class="text-gray-500 text-sm font-medium whitespace-nowrap">Filter by:</span>
        {categories.map(category => (
          <button 
            class={`px-4 py-2 rounded-full text-sm font-medium transition-all whitespace-nowrap ${
              category.active 
                ? 'bg-primary-500 text-white shadow-lg shadow-primary-500/25' 
                : 'bg-white text-gray-600 border border-gray-200 hover:border-primary-300 hover:text-primary-500'
            }`}
          >
            {category.name}
            <span class={`ml-1 ${category.active ? 'text-white/70' : 'text-gray-400'}`}>({category.count})</span>
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- All Posts Grid -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="flex items-center justify-between mb-10">
        <div>
          <span class="text-primary-500 text-sm font-bold uppercase tracking-wider">Latest</span>
          <h2 class="text-3xl md:text-4xl font-bold text-text-primary">All Articles</h2>
        </div>
        <div class="hidden md:flex items-center gap-2 text-gray-500">
          <button class="p-2 rounded-lg bg-gray-100 hover:bg-gray-200 transition-colors">
            <i class="fas fa-th-large"></i>
          </button>
          <button class="p-2 rounded-lg hover:bg-gray-100 transition-colors">
            <i class="fas fa-list"></i>
          </button>
        </div>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {regularPosts.map((post, index) => (
          <article 
            class="group bg-white rounded-2xl border border-gray-100 overflow-hidden hover:shadow-xl hover:border-primary-100 transition-all duration-300 flex flex-col h-full fade-in-up"
            style={`animation-delay: ${index * 100}ms`}
          >
            <a href={`/blog/${post.slug}`} class="relative h-52 overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent z-10 opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <img
                src={post.image}
                alt={post.title}
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              />
              <div class="absolute top-4 left-4 z-20">
                <span class={`${categoryColors[post.category] || 'bg-primary-500'} text-white text-xs font-bold px-3 py-1.5 rounded-full uppercase tracking-wider shadow-lg`}>
                  {post.category}
                </span>
              </div>
              <div class="absolute bottom-4 right-4 z-20 opacity-0 group-hover:opacity-100 transition-opacity">
                <span class="bg-white/90 backdrop-blur-sm text-gray-700 text-xs font-medium px-3 py-1.5 rounded-full">
                  <i class="fas fa-clock mr-1"></i> {post.readTime}
                </span>
              </div>
            </a>
            
            <div class="p-6 flex flex-col flex-grow">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-8 h-8 bg-gradient-to-br from-gray-200 to-gray-300 rounded-full flex items-center justify-center text-gray-600 text-xs font-bold">
                  {post.authorAvatar}
                </div>
                <div class="flex-1">
                  <p class="text-sm font-medium text-text-primary">{post.author}</p>
                  <p class="text-xs text-gray-400">{post.date}</p>
                </div>
              </div>
              
              <h2 class="text-lg font-bold text-text-primary mb-3 group-hover:text-primary-500 transition-colors line-clamp-2">
                <a href={`/blog/${post.slug}`}>{post.title}</a>
              </h2>
              
              <p class="text-text-secondary text-sm leading-relaxed mb-4 flex-grow line-clamp-3">
                {post.excerpt}
              </p>
              
              <a
                href={`/blog/${post.slug}`}
                class="inline-flex items-center text-primary-500 font-semibold text-sm hover:text-primary-600 transition-colors mt-auto group/link"
              >
                Read Article
                <i class="fas fa-arrow-right ml-2 text-xs transform group-hover/link:translate-x-1 transition-transform"></i>
              </a>
            </div>
          </article>
        ))}
      </div>
      
      <!-- Load More Button -->
      <div class="text-center mt-12">
        <button class="inline-flex items-center gap-2 px-8 py-4 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-xl transition-colors">
          <i class="fas fa-plus"></i>
          Load More Articles
        </button>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <Newsletter />

  <!-- Topics Section -->
  <section class="py-16 lg:py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <span class="text-primary-500 text-sm font-bold uppercase tracking-wider">Explore</span>
        <h2 class="text-3xl md:text-4xl font-bold text-text-primary">Popular Topics</h2>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        <a href="#" class="group bg-gradient-to-br from-emerald-50 to-emerald-100 rounded-2xl p-6 text-center hover:shadow-lg transition-all border border-emerald-100">
          <div class="w-14 h-14 bg-emerald-500 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
            <i class="fas fa-piggy-bank text-white text-xl"></i>
          </div>
          <h3 class="font-bold text-text-primary">Savings</h3>
          <p class="text-sm text-gray-500">12 articles</p>
        </a>
        
        <a href="#" class="group bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-6 text-center hover:shadow-lg transition-all border border-blue-100">
          <div class="w-14 h-14 bg-blue-500 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
            <i class="fas fa-chart-line text-white text-xl"></i>
          </div>
          <h3 class="font-bold text-text-primary">Investing</h3>
          <p class="text-sm text-gray-500">8 articles</p>
        </a>
        
        <a href="#" class="group bg-gradient-to-br from-purple-50 to-purple-100 rounded-2xl p-6 text-center hover:shadow-lg transition-all border border-purple-100">
          <div class="w-14 h-14 bg-purple-500 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
            <i class="fas fa-brain text-white text-xl"></i>
          </div>
          <h3 class="font-bold text-text-primary">Behavior</h3>
          <p class="text-sm text-gray-500">6 articles</p>
        </a>
        
        <a href="#" class="group bg-gradient-to-br from-orange-50 to-orange-100 rounded-2xl p-6 text-center hover:shadow-lg transition-all border border-orange-100">
          <div class="w-14 h-14 bg-orange-500 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
            <i class="fas fa-laptop text-white text-xl"></i>
          </div>
          <h3 class="font-bold text-text-primary">Freelancing</h3>
          <p class="text-sm text-gray-500">5 articles</p>
        </a>
        
        <a href="#" class="group bg-gradient-to-br from-pink-50 to-pink-100 rounded-2xl p-6 text-center hover:shadow-lg transition-all border border-pink-100">
          <div class="w-14 h-14 bg-pink-500 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
            <i class="fas fa-plane text-white text-xl"></i>
          </div>
          <h3 class="font-bold text-text-primary">Travel</h3>
          <p class="text-sm text-gray-500">4 articles</p>
        </a>
        
        <a href="#" class="group bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-2xl p-6 text-center hover:shadow-lg transition-all border border-indigo-100">
          <div class="w-14 h-14 bg-indigo-500 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
            <i class="fas fa-shield-alt text-white text-xl"></i>
          </div>
          <h3 class="font-bold text-text-primary">Planning</h3>
          <p class="text-sm text-gray-500">15 articles</p>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
