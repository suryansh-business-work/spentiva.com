---
interface Props {
  variant?: "elevated" | "outlined" | "filled";
  padding?: "sm" | "md" | "lg" | "xl";
  hoverable?: boolean;
  clickable?: boolean;
}

const {
  variant = "elevated",
  padding = "md",
  hoverable = false,
  clickable = false,
} = Astro.props;

const variantClasses = {
  elevated: "bg-white shadow-md hover:shadow-xl",
  outlined: "bg-white border-2 border-border-light hover:border-primary-200",
  filled: "bg-gray-50 border border-border-light",
};

const paddingClasses = {
  sm: "p-4",
  md: "p-6",
  lg: "p-8",
  xl: "p-10",
};

const hoverClass = hoverable ? "transform hover:-translate-y-1" : "";
const clickableClass = clickable ? "cursor-pointer" : "";
---

<div
  class={`rounded-xl transition-all duration-300 ${variantClasses[variant]} ${paddingClasses[padding]} ${hoverClass} ${clickableClass}`}
>
  <slot />
</div>
