---
const benefits = [
  { icon: "fas fa-lightbulb", text: "Weekly money tips" },
  { icon: "fas fa-chart-pie", text: "Market insights" },
  { icon: "fas fa-gift", text: "Exclusive offers" },
];
---

<!-- Newsletter Section -->
<section class="py-16 lg:py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="fade-in-up">
      <div
        class="relative rounded-3xl overflow-hidden"
        style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);"
      >
        <!-- Background Elements -->
        <div class="absolute inset-0 overflow-hidden">
          <div class="absolute -top-20 -right-20 w-80 h-80 bg-primary-500/20 rounded-full blur-3xl"></div>
          <div class="absolute -bottom-20 -left-20 w-60 h-60 bg-blue-500/15 rounded-full blur-3xl"></div>
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
          
          <!-- Grid Pattern -->
          <div class="absolute inset-0" style="background-image: radial-gradient(rgba(255,255,255,0.05) 1px, transparent 1px); background-size: 30px 30px;"></div>
        </div>
        
        <div class="relative z-10 px-8 py-12 md:px-12 md:py-16 lg:px-16 lg:py-20">
          <div class="max-w-4xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-10 items-center">
              <!-- Left Content -->
              <div class="text-center lg:text-left">
                <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 mb-6">
                  <i class="fas fa-envelope text-primary-400"></i>
                  <span class="text-white/90 text-sm font-medium">Newsletter</span>
                </div>
                
                <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 text-white leading-tight">
                  Get Smarter About <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-400 to-emerald-400">Money</span>
                </h2>
                
                <p class="text-white/80 mb-8 text-lg leading-relaxed">
                  Join 10,000+ subscribers who get weekly tips, insights, and strategies to master their finances.
                </p>
                
                <!-- Benefits -->
                <div class="flex flex-wrap justify-center lg:justify-start gap-4 mb-8">
                  {benefits.map(benefit => (
                    <div class="flex items-center gap-2 bg-white/10 backdrop-blur-sm rounded-full px-4 py-2">
                      <i class={`${benefit.icon} text-primary-400 text-sm`}></i>
                      <span class="text-white/90 text-sm">{benefit.text}</span>
                    </div>
                  ))}
                </div>
              </div>
              
              <!-- Right Form -->
              <div class="bg-white/10 backdrop-blur-md rounded-2xl p-8 border border-white/20">
                <form
                  class="space-y-4"
                  aria-label="Newsletter subscription form"
                >
                  <div>
                    <label class="block text-white/80 text-sm font-medium mb-2">Full Name</label>
                    <input
                      type="text"
                      placeholder="John Doe"
                      class="w-full px-5 py-4 rounded-xl bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:border-primary-400 focus:ring-2 focus:ring-primary-400/30 transition-all"
                      aria-label="Full name for newsletter"
                    />
                  </div>
                  
                  <div>
                    <label class="block text-white/80 text-sm font-medium mb-2">Email Address</label>
                    <input
                      type="email"
                      placeholder="john@example.com"
                      required
                      class="w-full px-5 py-4 rounded-xl bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:border-primary-400 focus:ring-2 focus:ring-primary-400/30 transition-all"
                      aria-label="Email address for newsletter"
                    />
                  </div>
                  
                  <button
                    type="submit"
                    class="cursor-pointer w-full px-8 py-4 bg-gradient-to-r from-primary-500 to-primary-600 text-white font-semibold rounded-xl hover:from-primary-600 hover:to-primary-700 hover:scale-[1.02] transition-all duration-300 shadow-xl shadow-primary-500/25 flex items-center justify-center gap-2"
                    aria-label="Subscribe to newsletter"
                  >
                    <i class="fas fa-paper-plane"></i>
                    Subscribe Now
                  </button>
                </form>
                
                <div class="mt-6 flex items-center justify-center gap-4 text-white/60 text-xs">
                  <span class="flex items-center gap-1">
                    <i class="fas fa-lock"></i> No spam
                  </span>
                  <span>â€¢</span>
                  <span class="flex items-center gap-1">
                    <i class="fas fa-times-circle"></i> Unsubscribe anytime
                  </span>
                </div>
              </div>
            </div>
            
            <!-- Subscriber Count -->
            <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-6 text-center">
              <div class="flex items-center gap-3">
                <div class="flex -space-x-3">
                  <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full border-2 border-gray-900 flex items-center justify-center text-white text-xs font-bold">SK</div>
                  <div class="w-10 h-10 bg-gradient-to-br from-purple-400 to-purple-600 rounded-full border-2 border-gray-900 flex items-center justify-center text-white text-xs font-bold">AP</div>
                  <div class="w-10 h-10 bg-gradient-to-br from-pink-400 to-pink-600 rounded-full border-2 border-gray-900 flex items-center justify-center text-white text-xs font-bold">RK</div>
                  <div class="w-10 h-10 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full border-2 border-gray-900 flex items-center justify-center text-white text-xs font-bold">+10K</div>
                </div>
                <div class="text-left">
                  <p class="text-white font-semibold">10,000+ subscribers</p>
                  <p class="text-white/60 text-sm">Join our community</p>
                </div>
              </div>
              
              <div class="hidden sm:block w-px h-12 bg-white/20"></div>
              
              <div class="flex items-center gap-2">
                <div class="flex gap-1">
                  {[1, 2, 3, 4, 5].map(() => (
                    <i class="fas fa-star text-yellow-400 text-sm"></i>
                  ))}
                </div>
                <span class="text-white/80 text-sm">4.9/5 avg rating</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
