<mjml>
  <mj-head>
    <mj-title>New Support Ticket - Spentiva</mj-title>
    <mj-font name="Inter" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" />
    <mj-attributes>
      <mj-all font-family="Inter, Arial, sans-serif" />
      <mj-text font-size="14px" color="#334155" line-height="1.6" />
      <mj-section background-color="#ffffff" padding="0" />
    </mj-attributes>
  </mj-head>
  <mj-body background-color="#f8fafc">
    <!-- Header -->
    <mj-section background-color="#ffffff" padding="28px 24px 20px" border-bottom="2px solid #dc2626">
      <mj-column>
        <mj-text font-size="22px" font-weight="700" color="#0f172a" letter-spacing="-0.3px">
          Spentiva Support
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Main Content -->
    <mj-section background-color="#ffffff" padding="32px 28px">
      <mj-column>
        <mj-text font-size="16px" font-weight="600" color="#0f172a" padding-bottom="16px">
          New Support Request
        </mj-text>

        <mj-text font-size="14px" color="#475569" padding-bottom="24px">
          A user has submitted a new support ticket that requires attention.
        </mj-text>

        <!-- Ticket Details -->
        <mj-wrapper background-color="#fef2f2" padding="20px 24px" border-radius="6px" border="1px solid #fecaca">
          <mj-section background-color="transparent" padding="0">
            <mj-column>
              <mj-text font-size="11px" color="#64748b" font-weight="600" letter-spacing="0.8px" padding-bottom="4px">
                TICKET ID
              </mj-text>
              <mj-text font-size="16px" font-weight="700" color="#dc2626" padding-bottom="16px">
                {{ ticketId }}
              </mj-text>

              <mj-text font-size="11px" color="#64748b" font-weight="600" letter-spacing="0.8px" padding-bottom="4px">
                TYPE
              </mj-text>
              <mj-text font-size="14px" font-weight="600" color="#334155" padding-bottom="16px">
                {{ ticketType }}
              </mj-text>

              <mj-text font-size="11px" color="#64748b" font-weight="600" letter-spacing="0.8px" padding-bottom="4px">
                SUBJECT
              </mj-text>
              <mj-text font-size="14px" font-weight="600" color="#334155" padding-bottom="16px">
                {{ subject }}
              </mj-text>

              <mj-divider border-color="#fecaca" border-width="1px" padding="4px 0 16px 0" />

              <mj-text font-size="11px" color="#64748b" font-weight="600" letter-spacing="0.8px" padding-bottom="4px">
                USER
              </mj-text>
              <mj-text font-size="14px" color="#334155" padding-bottom="4px">
                {{ userName }} &lt;{{ userEmail }}&gt;
              </mj-text>

              <mj-text font-size="11px" color="#64748b" font-weight="600" letter-spacing="0.8px" padding="16px 0 4px 0">
                DESCRIPTION
              </mj-text>
              <mj-text font-size="13px" color="#374151" line-height="1.7" padding-bottom="0">
                {{ description }}
              </mj-text>
            </mj-column>
          </mj-section>
        </mj-wrapper>

        <!-- Action Required -->
        <mj-text font-size="14px" color="#334155" font-weight="600" padding="24px 0 12px 0">
          Action Required:
        </mj-text>

        <mj-text font-size="13px" color="#475569" line-height="2" padding-bottom="20px">
          &#8226; Review the ticket details above<br />
          &#8226; Respond to the user within 24 hours<br />
          &#8226; Update ticket status as you work on it
        </mj-text>

        <mj-divider border-color="#e2e8f0" border-width="1px" padding="4px 0 16px 0" />

        <mj-text font-size="12px" color="#94a3b8">
          Submitted: {{ createdAt }}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#f8fafc" padding="20px 24px" border-top="1px solid #e2e8f0">
      <mj-column>
        <mj-text align="center" font-size="11px" color="#94a3b8">
          &copy; 2025 Spentiva &middot; Internal Support Notification
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
